<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.ClosingManagement"
    android:background="#eceff1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Management"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nuntioblack"
            android:textSize="20dp"/>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_margin="20dp"
            android:hint="Search by Item Name .. "
            app:endIconDrawable="@drawable/ic_baseline_search_24"
            app:endIconTint="@color/colorPrimaryDark"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#000">

            <AutoCompleteTextView
                android:id="@+id/etSearchClosing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />

        </com.google.android.material.textfield.TextInputLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainClosingIterate"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>